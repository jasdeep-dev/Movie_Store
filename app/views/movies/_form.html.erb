

<div class="container" style="background:azure;">
  <h1 style="color: #9d9d9d; text-align: center; border: outset;background: #a30c0c;border-color: #3333;">ADD A NEW MOVIE</h1>
 

<%= form_for :movie, url: movies_path  do |f| %>
<div style="background: white">
 
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        Title
      </label>
      <div class="col-md-10">
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br>

    <% if view == 'automatic' %>
  <%= hidden_field_tag 'view', view %>
  <%else%>
  <%= view %>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        Poster
      </label>
      <div class="col-md-10">
        <%= f.file_field :image, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        genre
      </label>
      <div class="col-md-10">
        <%= f.text_field :genre, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        Plot
      </label>
      <div class="col-md-10">
        <%= f.text_area :plot, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        Cast
      </label>
      <div class="col-md-10">
        <%= f.text_area :cast, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        year
      </label>
      <div class="col-md-10">
        <%= f.date_field :year, as: :year,style: "width:79% !important;"%>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        Rating
      </label>
      <div class="col-md-10">
        <%= f.number_field :rating, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label for="inputEmail3" class="col-md-2">
        Website
      </label>
      <div class="col-md-10">
        <%= f.text_field :web, class: "form-control", required: true %>
      </div>
    </div>
    <br>
    <br><%end%>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Add new Moviews",class: "btn btn-success btn-block",style: "margin-top: 20px;"%>
      <p class="notice"><%= notice %></p>
               <p class="alert"><%= alert %></p>
    </div>
  </div>
</div>
  <%end%>

